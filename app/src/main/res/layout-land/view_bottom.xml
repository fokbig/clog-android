<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource"
    android:baselineAligned="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left_ll"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/left_ll_iv"
                android:layout_width="@dimen/view_bottom_img"
                android:layout_height="@dimen/view_bottom_img"
                android:layout_marginEnd="@dimen/view_bottom_margin"
                android:contentDescription="@string/view_bottom_left_img"
                android:src="@mipmap/left_tab_in" />
            <TextView
                android:id="@+id/left_ll_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/view_bottom_left_text"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mid_ll"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/mid_ll_iv"
                android:layout_width="@dimen/view_bottom_img"
                android:layout_height="@dimen/view_bottom_img"
                android:layout_marginEnd="@dimen/view_bottom_margin"
                android:contentDescription="@string/view_bottom_left_img"
                android:src="@mipmap/mid_tab_in" />
            <TextView
                android:id="@+id/mid_ll_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/view_bottom_mid_text"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/right_ll"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/right_ll_iv"
                android:layout_width="@dimen/view_bottom_img"
                android:layout_height="@dimen/view_bottom_img"
                android:layout_marginEnd="@dimen/view_bottom_margin"
                android:contentDescription="@string/view_bottom_left_img"
                android:src="@mipmap/right_tab_in" />
            <TextView
                android:id="@+id/right_ll_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/view_bottom_right_text"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>